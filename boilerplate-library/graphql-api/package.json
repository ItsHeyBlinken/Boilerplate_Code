{
  "name": "graphql-api-boilerplate",
  "version": "1.0.0",
  "description": "A production-ready GraphQL API with Apollo Server, TypeScript, and PostgreSQL. Perfect for modern APIs with type-safe queries and real-time subscriptions.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "generate": "graphql-codegen --config codegen.yml",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@as-integrations/fastify": "^2.1.0",
    "@prisma/client": "^5.7.0",
    "apollo-server-core": "^3.12.1",
    "apollo-server-express": "^3.12.1",
    "class-validator": "^0.14.0",
    "dataloader": "^2.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-subscriptions": "^2.0.0",
    "graphql-tag": "^2.12.6",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.7.0",
    "reflect-metadata": "^0.1.13",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2"
  },
  "keywords": [
    "graphql",
    "apollo-server",
    "typescript",
    "prisma",
    "api",
    "boilerplate"
  ],
  "author": "Your Name",
  "license": "MIT"
}

