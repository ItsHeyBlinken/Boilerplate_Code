{
  "name": "monorepo-turborepo-boilerplate",
  "version": "1.0.0",
  "description": "A monorepo setup with Turborepo, managing multiple packages and applications. Perfect for teams working on multiple related projects.",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.1.0",
    "turbo": "^1.11.2",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "monorepo",
    "turborepo",
    "workspaces",
    "monorepo",
    "boilerplate"
  ],
  "author": "Your Name",
  "license": "MIT"
}

