/**
 * Client Environment Variables Template
 * 
 * This file contains all the environment variables needed for the e-commerce platform client.
 * Copy this file to .env and update the values with your actual configuration.
 * 
 * Configuration Categories:
 * - API endpoints and configuration
 * - Payment processing (Stripe publishable key)
 * - Application settings and metadata
 * - Feature flags and toggles
 * - External service integrations
 * - Image and file handling
 * - Pagination settings
 * - Cache configuration
 * 
 * @author E-commerce Platform Team
 * @version 1.0.0
 */

# API Configuration
VITE_API_URL=http://localhost:3000/api
VITE_API_TIMEOUT=10000

# Stripe Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# App Configuration
VITE_APP_NAME=E-commerce Platform
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=A comprehensive e-commerce platform

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_PWA=false

# External Services
VITE_GOOGLE_ANALYTICS_ID=
VITE_FACEBOOK_PIXEL_ID=
VITE_HOTJAR_ID=

# Image Configuration
VITE_MAX_IMAGE_SIZE=5242880
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Pagination
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# Cache Configuration
VITE_CACHE_DURATION=300000
VITE_ENABLE_CACHE=true